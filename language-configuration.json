{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": ";",

    },
    // symbols used as brackets
    "brackets": 
    [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": 
    [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": 
    [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // "folding": 
    // {
    //   "markers": {
    //     "start": "^\\s*//\\s*#?if\\b",
    //     "end": "^\\s*//\\s*#?end if\\b"
    // },
    "indentationRules": 
    {
          "increaseIndentPattern": "(?<!(end |End ))\\b(if|Function|else|elseif|Function|Module 24|Module 8|Module 2)\\b",
          "decreaseIndentPattern": "\\b(end if|else|elseif|End Function|End Module)\\b"
    }
}